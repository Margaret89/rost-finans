					.review-slider__text= item.text

	section.faq-wrap.bg-light-blue
		.container
			.row
				.col-12
					.h1 FAQ

					-
						var list=[
							{question:'Вы можете получить кредит, если', answer:'Единственно верное решение материальных проблем – восполнить нехватку денежных средств. Проблемы бывают микро и макро масштаба. Проверенный план действий, разработанный специалистами компании, помогает устранить трудности, превращая их в возможности. «Центрофинанс» предлагает несколько вариантов микрозаймов, применимых для конкретной финансовой задачи'},
							{question:'На какие цели можно взять кредит?', answer:'Текст'},
							{question:'На какие цели можно взять кредит?', answer:'Текст'},
							{question:'На какие цели можно взять кредит?', answer:'Текст'},
						]

					each item in list
						.unwrap-block.js-unwrap-block
							.unwrap-block__head.js-unwrap-head
								.unwrap-block__title= item.question
								.unwrap-block__btn.js-unwrap-block-btn
									+svg('ic-plus','ic-plus', '18', '18')
									+svg('ic-minus','ic-minus', '18', '2')

							.unwrap-block__content.js-unwrap-content
								.unwrap-block__subtitle Ответ:
								p= item.answer

	section.mark-wrap
		.container
			.row
				.col-12
					.h1 Рейтинг компании

			.row
				-
					var list=[
						{logo:'ya.jpg', num:'4.7', text:'Оценок : 10'},
						{logo:'zoon.jpg', num:'4.7', text:'Оценок : 10'},
						{logo:'yahoo.jpg', num:'4.7', text:'Оценок : 10'},
					]

				each item in list
					.col-4
						.mark
							.mark__icon
								img(src="assets/img/"+item.logo, alt="")
							.mark__content
								.mark__rating
									.mark__num= item.num 

									.rating
										.rating__content(style="width:76%")

								.mark__text= item.text